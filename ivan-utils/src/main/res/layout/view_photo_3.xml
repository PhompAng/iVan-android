<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<android.support.constraint.Guideline
		android:id="@+id/guide50"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5" />

	<android.support.constraint.Guideline
		android:id="@+id/guide50h"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.5" />

	<ImageView
		android:id="@+id/imageView1"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginEnd="@dimen/space_small"
		app:layout_constraintBottom_toBottomOf="@+id/imageView3"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="@+id/guide50"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@color/colorAccent" />

	<TextView
		android:id="@+id/image1Description"
		android:layout_width="0dp"
		android:layout_height="80dp"
		android:background="@drawable/view_black_gradient"
		android:ellipsize="end"
		android:fontFamily="@font/kanit_medium"
		android:gravity="bottom"
		android:maxLines="1"
		android:padding="@dimen/space_normal"
		android:textColor="@android:color/white"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="@+id/imageView1"
		app:layout_constraintLeft_toLeftOf="@+id/imageView1"
		app:layout_constraintRight_toRightOf="@+id/imageView1"
		tools:text="John Doe" />

	<ImageView
		android:id="@+id/imageView2"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginBottom="@dimen/space_small"
		android:layout_marginStart="@dimen/space_small"
		app:layout_constraintBottom_toTopOf="@+id/guide50h"
		app:layout_constraintDimensionRatio="h,1:1"
		app:layout_constraintLeft_toRightOf="@+id/guide50"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@color/colorAccent" />

	<TextView
		android:id="@+id/image2Description"
		android:layout_width="0dp"
		android:layout_height="80dp"
		android:background="@drawable/view_black_gradient"
		android:ellipsize="end"
		android:fontFamily="@font/kanit_medium"
		android:gravity="bottom"
		android:maxLines="1"
		android:padding="@dimen/space_normal"
		android:textColor="@android:color/white"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="@+id/imageView2"
		app:layout_constraintLeft_toLeftOf="@+id/imageView2"
		app:layout_constraintRight_toRightOf="@+id/imageView2"
		tools:text="John Doe" />

	<ImageView
		android:id="@+id/imageView3"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="@dimen/space_small"
		android:layout_marginTop="@dimen/space_small"
		app:layout_constraintDimensionRatio="h,1:1"
		app:layout_constraintLeft_toRightOf="@+id/guide50"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/guide50h"
		tools:src="@color/colorAccent" />

	<TextView
		android:id="@+id/image3Description"
		android:layout_width="0dp"
		android:layout_height="80dp"
		android:background="@drawable/view_black_gradient"
		android:ellipsize="end"
		android:fontFamily="@font/kanit_medium"
		android:gravity="bottom"
		android:maxLines="1"
		android:padding="@dimen/space_normal"
		android:textColor="@android:color/white"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="@+id/imageView3"
		app:layout_constraintLeft_toLeftOf="@+id/imageView3"
		app:layout_constraintRight_toRightOf="@+id/imageView3"
		tools:text="John Doe" />
</android.support.constraint.ConstraintLayout>