<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white">

	<com.firebaseapp.ivan.util.view.ContactView
		android:id="@+id/phoneContactView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:cv_divider="true"
		app:cv_hint="@string/phone"
		app:cv_icon="@drawable/ic_phone_black_24dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<com.firebaseapp.ivan.util.view.ContactView
		android:id="@+id/emailContactView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:cv_divider="false"
		app:cv_hint="@string/email"
		app:cv_icon="@drawable/ic_email_black_24dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/phoneContactView" />

</android.support.constraint.ConstraintLayout>